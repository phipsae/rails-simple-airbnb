<%= simple_form_for(flat) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :picture_url %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.submit class: 'btn btn-primary' %>
  <%= link_to 'Cancel', flats_path, class: 'btn btn-danger ml-2' %>
<% end %>
